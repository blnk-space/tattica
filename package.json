  "bugs": {
    "url": "https://github.com/lucagez/tattica/issues"
  },
  "homepage": "https://github.com/lucagez/tattica#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "browser-sync": "^2.26.3",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "lodash": "^4.17.11",
    "microbundle": "^0.9.0",
    "mocha": "^5.2.0",
    "puppeteer": "^1.11.0"
  }
