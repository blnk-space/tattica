{
  "name": "tattica",
  "version": "0.0.1",
  "description": "Tactical and adaptive asset loading library",
  "main": "dist/tattica.mjs",
  "scripts": {
    "dev": "microbundle src/tattica.mjs -w & browser-sync . --port 4000 -w --no-open",
